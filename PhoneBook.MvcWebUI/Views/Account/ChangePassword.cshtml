@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!------ Include the above in your HEAD tag ---------->
<div class="clearfix"> </div>



<div class="container">

    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div style="margin-top: 15%;" class="col-md-4">
            <section class="login-form">
                <form method="post" action="ChangePassword">
                    <img src="http://i.imgur.com/RcmcLv4.png" class="img-responsive" alt="" />
                   
                    <label>Current Password</label>
                    <div class="form-group pass_show">
                        <input type="password" name="currentPassword" class="form-control" placeholder="Current Password">
                    </div>

                    <label>New Password</label>
                    <div class="form-group pass_show">
                        <input type="password" name="password" class="form-control" placeholder="New Password">
                    </div>
                    <label>Confirm Password</label>
                    <div class="form-group pass_show">
                        <input type="password" name="repassword" class="form-control" placeholder="Confirm Password">
                    </div>

                    <text>@ViewBag.message</text>
                    <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Change it</button>

                </form>

            </section>
        </div>

        <div class="col-md-4"></div>


    </div>


</div>